generator client {

  provider = "prisma-client-js"
}

datasource db {

  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role{

  ADMIN
  USER
}

enum Reservation{

  PENDING
  APPROVED
  CANCELLED
}

model User {

  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  hotels    Hotel[]

  @@map("users")
}

model Hotel {
  id           Int           @id @default(autoincrement())
  name         String
  description  String
  address      String
  image        String?
  price        Float
  owner        User          @relation(fields: [ownerId], references: [id])
  ownerId      Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("hotels")
}
